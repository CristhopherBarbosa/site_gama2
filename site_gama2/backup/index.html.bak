    const browserLang = navigator.language || navigator.userLanguage;
    console.log('Idioma do navegador:', browserLang);
    
    // Verificar se o idioma do navegador corresponde a um dos nossos idiomas dispon√≠veis
    if (browserLang.startsWith('pt')) return 'pt';
    if (browserLang.startsWith('en')) return 'en';
    if (browserLang.startsWith('es')) return 'es';
    if (browserLang.startsWith('zh')) return 'zh';
    
    // Padr√£o para portugu√™s se n√£o encontrarmos correspond√™ncia
    return 'pt';
}

// Evento de carregamento
document.addEventListener('DOMContentLoaded', function() {
    const languageFlags = document.querySelectorAll('.language-flag');
    
    // Adicionar eventos de clique √†s bandeiras
    languageFlags.forEach(flag => {
        flag.addEventListener('click', function() {
            console.log('Bandeira clicada:', this.dataset.lang);
            const lang = this.dataset.lang;
            translatePage(lang);
        });
    });

    // Verificar se h√° uma prefer√™ncia de idioma salva
    const savedLanguage = localStorage.getItem('preferred-language');
    if (savedLanguage && translations[savedLanguage]) {
        console.log('Idioma salvo encontrado:', savedLanguage);
        translatePage(savedLanguage);
    } else {
        // Tentar detectar idioma do navegador ou usar portugu√™s como padr√£o
        const detectedLang = detectBrowserLanguage();
        translatePage(detectedLang);
    }

    // Adicionar observador para altera√ß√µes no DOM para traduzir elementos que s√£o adicionados dinamicamente
    const observer = new MutationObserver((mutations) => {
        const currentLang = localStorage.getItem('preferred-language') || 'pt';
        
        // Verificar apenas quando elementos s√£o adicionados
        mutations.forEach(mutation => {
            if (mutation.type === 'childList' && mutation.addedNodes.length > 0) {
                // Traduzir novamente para garantir que novos elementos sejam traduzidos
                setTimeout(() => translatePage(currentLang), 100);
            }
        });
    });

    // Observar altera√ß√µes no corpo do documento
    observer.observe(document.body, { 
        childList: true,
        subtree: true 
    });
});
