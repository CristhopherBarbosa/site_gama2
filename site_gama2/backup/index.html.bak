// Fun√ß√£o para traduzir a p√°gina
function translatePage(lang) {
    console.log('Traduzindo para:', lang);
    const translation = translations[lang];
    if (!translation) {
        console.log('Tradu√ß√£o n√£o encontrada para:', lang);
        return;
    }
    
    // Mudar classes ativas nas bandeiras
    const languageFlags = document.querySelectorAll('.language-flag');
    
    // Corrigir erros no c√≥digo de tradu√ß√£o
    languageFlags.forEach(flag => {
        if (flag.dataset.lang === lang) {
            flag.classList.add('active');
        } else {
            flag.classList.remove('active');
        }
    });
    
    // Traduzir elementos
    elementsToTranslate.forEach(item => {
        try {
            const elements = document.querySelectorAll(item.selector);
            if (elements.length === 0) {
                return;
            }
            
            elements.forEach(element => {
                if (translation[item.key]) {
                    // Se precisamos traduzir um atributo espec√≠fico
                    if (item.attribute) {
                        element.setAttribute(item.attribute, translation[item.key]);
                        return;
                    }
                    
                    // Preservar elementos HTML dentro do texto, se houver
                    if (element.innerHTML.includes('<') && element.innerHTML.includes('>') && 
                        !element.innerHTML.startsWith('<i ') && // Ignorar elementos que s√£o apenas √≠cones
                        element.children.length > 0) { // Tem elementos filhos reais
                        
                        // Procura por n√≥s de texto diretos e os substitui
                        let hasReplaced = false;
                        for (let i = 0; i < element.childNodes.length; i++) {
                            const node = element.childNodes[i];
                            if (node.nodeType === Node.TEXT_NODE && node.textContent.trim()) {
                                // Substitui apenas os n√≥s de texto, preservando os elementos HTML
                                node.textContent = translation[item.key];
                                hasReplaced = true;
                                break;
                            }
                        }
                        
                        // Se n√£o conseguimos substituir n√≥s de texto diretos, tentamos uma abordagem alternativa
                        if (!hasReplaced) {
                            // Captura o texto atual (sem as tags HTML)
                            const textOnly = element.textContent.trim();
                            if (textOnly) {
                                // Substitui apenas o texto, mantendo a estrutura HTML
                                const html = element.innerHTML;
                                element.innerHTML = html.replace(textOnly, translation[item.key]);
                            }
                        }
                    } else {
                        // Texto simples, substituir diretamente
                        element.textContent = translation[item.key];
                    }
                }
            });
        } catch (error) {
            console.error('Erro ao traduzir:', item.selector, error);
        }
    });
    
    // Salvar prefer√™ncia no localStorage
    localStorage.setItem('preferred-language', lang);
}

